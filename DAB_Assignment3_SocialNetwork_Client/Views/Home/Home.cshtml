
@{
    ViewData["Title"] = "Home";
}

<div id="app">
    <form class="form-signin">
        <div class="text-center mb-4">
            <img class="mb-4" src="Images/logo.png" alt="" width="200" height="200">
            <h1 class="h3 mb-3 font-weight-normal">Welcome to GameHub</h1>
            <p>Please Login to access your feed</p>
        </div>

        <div class="form-label-group">
            <input type="email" id="inputEmail" v-model="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
            <label for="inputEmail">Email address</label>
        </div>


        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
            <label for="inputPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button v-on:click="cookie" class="btn btn-lg btn-primary btn-block" type="submit" asp-controller="Home" asp-action="Feed">Sign in</button>
            <p class="mt-5 mb-3 text-muted text-center">© 2017-2018</p>
    </form>
</div>


<script>
    new Vue({
        el: '#app',
        data: {
            inputEmail: ''
        },
        methods: {
            cookie: function (event) {
                deleteCookies();
                document.cookie = this.inputEmail;
                //Create user should be here
            }
        }
    })
</script>